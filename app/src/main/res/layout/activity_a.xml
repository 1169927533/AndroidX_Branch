<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="邀请"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_noeffect"
        android:background="@drawable/group_bg_01"
        android:layout_marginTop="50dp"
        android:layout_width="168dp"
        android:layout_height="209dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_head"
        app:layout_constraintBottom_toBottomOf="@+id/img_noeffect"
        app:layout_constraintLeft_toLeftOf="@+id/img_noeffect"
        app:layout_constraintRight_toRightOf="@+id/img_noeffect"
        android:layout_width="168dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>