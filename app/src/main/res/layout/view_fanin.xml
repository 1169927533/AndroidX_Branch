<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="18dp">

    <TextView
        android:id="@+id/tv_groupname"
        android:layout_width="wrap_content"
android:text="真爱团"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/group_img_tlove_word"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgHead"
        app:layout_constraintTop_toTopOf="parent"
          />

    <ImageView
        android:id="@+id/imgHead"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:background="@drawable/group_icon_tlove_numberhead"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="11"
        android:id="@+id/tv_fanlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgHead"
        app:layout_constraintLeft_toLeftOf="@+id/imgHead"
        app:layout_constraintRight_toRightOf="@+id/imgHead"
        app:layout_constraintTop_toTopOf="@+id/imgHead"
        tools:text="20" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝团成员 "
        android:textColor="#FF8ABB"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_groupname"
        app:layout_constraintLeft_toRightOf="@+id/tv_groupname"
        app:layout_constraintTop_toTopOf="@+id/tv_groupname" />
</androidx.constraintlayout.widget.ConstraintLayout>