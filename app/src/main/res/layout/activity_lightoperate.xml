<?xml version="1.0" encoding="utf-8"?>
<com.example.androidx_branch.lighetoperate.view.MyConViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="110dp"
        android:background="@color/color_FFC9A0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.androidx_branch.lighetoperate.view.LitePager

        android:id="@+id/litePager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#73000000">

        <View
            android:id="@+id/viewLeft"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark" />

        <View
            android:id="@+id/viewCenter"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/viewRight"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@color/color_FFEDDE" />
    </com.example.androidx_branch.lighetoperate.view.LitePager>

    <ImageView
        android:id="@+id/imgHead"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/avatar_rengwuxian"
        app:layout_constraintBottom_toTopOf="@+id/getAnfleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="控制器：获取角度，让view进行旋转的"
        app:layout_constraintBottom_toTopOf="@+id/getAnfleView" />

    <com.example.androidx_branch.lighetoperate.view.GetAngleView
        android:id="@+id/getAnfleView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</com.example.androidx_branch.lighetoperate.view.MyConViewGroup>